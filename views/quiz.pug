extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jaka jest Twoja ulubiona pora roku?
      ul
        each item in data
          li
            input(type='radio' name='quiz' value=item._id)
            span=item.title
      input(type="submit" value='Zagłosuj')
      p Aby zobaczyć wyniki oddaj swój głos.
  else
    h2 Oddałeś już swój głos w ankiecie
    h3 Wyniki:
    ul
    each item in data
      li #{item.title} głosów: #{item.vote} (#{Math.round(item.vote/sum*100)}%)

    p Oddano już #{sum} głosów.
